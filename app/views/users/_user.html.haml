.row.box{ class: "#{user.status}" }
  .row
    .col-md-4
      = link_to user, :class => '', :title => "#{user.name}" do
        = image_tag user.gravatar_image_url, :size => "100", :class => 'img-thumbnail'
      %h4= user.name
    .col-md-8
      = f.input :role_id, :collection => Role.all
      = f.input :employee_number
      = f.input :tenbis_number
      = f.input :status, :collection => ["active", "inactive"]
      = f.input :department_id, collection: Department.all
  .row
    .col-md-12
      = f.error :base, :error_method => :to_sentence

