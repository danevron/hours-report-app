- if current_user.timesheets.exists?
  %li.dropdown.purple
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = fa_icon "clock-o 3x"
      %p Timesheets
    %ul.dropdown-menu
      %li
        = link_to "All your timesheets", user_timesheets_path(current_user), target: "_self"
      - if current_user.current_timesheet
        %li
          = link_to "Your current timesheet", [:edit, current_user, current_user.current_timesheet], target: "_self"
          .current-timesheet-ending-time.hidden= current_user.current_timesheet.end_date.strftime("%Y/%m/%d")
%li.dropdown.indianred
  %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
    = fa_icon "plane 3x"
    %p Expense Report
  %ul.dropdown-menu
    %li
      = link_to user_expense_reports_path(current_user), target: "_self" do
        = fa_icon "files-o 2x"
        %p Your expense reports
    %li
      = link_to new_user_expense_report_path(current_user), target: "_self" do
        = fa_icon "files-o 2x"
        %p New expense reports
    - if current_user.admin?
      %li
        = link_to expense_reports_path, target: "_self" do
          = fa_icon "files-o 2x"
          %p All expense reports
